/*
================================================================================
    TEST PROFILE CONFIGURATION
================================================================================
    Minimal test dataset for pipeline validation
--------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'
    
    // Limit resources for testing
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'
    
    // Input data
    input = "${projectDir}/assets/samplesheet_test.csv"
    
    // Use iGenomes for test
    genome = 'GRCh38'
    
    // Small test regions
    intervals = "${projectDir}/assets/test_intervals.bed"
    
    // Skip time-consuming steps for quick test
    skip_markduplicates = true
}

process {
    withName: '.*' {
        cpus = 1
        memory = '3.GB'
        time = '1.h'
    }
}
